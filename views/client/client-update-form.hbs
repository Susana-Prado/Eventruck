<h1 class="form-title">Edit your profile</h1>
<div class="form-container">
    <form class="user-form" enctype="multipart/form-data" action="/private/profile/edit" method="POST" >
        <div class="row mb-3">
            <label for="username" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-10">
                <i class="fas fa-user icon"></i>
                <input type="text" name="username" class="form-control" id="inputEmail3" value="{{user.username}}">
            </div>
        </div>
        <div class="row mb-3">
            <label for="email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <i class="fas fa-envelope icon"></i>
                <input type="email" name="email" class="form-control" id="inputEmail3" value="{{user.email}}">
            </div>
        </div>
        <div class="mb-4">
            <label for="image" class="col-sm-2 col-form-label">Upload a profile image:</label>
            <div class="col-sm-10">
                <i class="far fa-image icon"></i>
                <input type="file" name="image" class="form-control" id="inputPassword3" value="{{user.image}}">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
<a class="back" href="/private/profile">Back to Profile</a>