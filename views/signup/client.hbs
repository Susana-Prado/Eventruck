    <label for="pizza">Pizza</label>
    <input type="checkbox" name="pizza">
    <label for="sushi">Sushi</label>
    <input type="checkbox" name="sushi">
    <label for="smoothies">Smoothies</label>
    <input type="checkbox" name="smoothies">
    <label for="tea">Tea</label>
    <input type="checkbox" name="tea">
    <label for="coffee">Coffee</label>
    <input type="checkbox" name="coffee">
    <label for="beer">Beer</label>
    <input type="checkbox" name="beer">
    <label for="cocktails">Cocktails</label>
